{
    "name": "webrtc-games-backend",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "typeorm": "node -r tsconfig-paths/register -r ts-node/register node_modules/.bin/typeorm -d typeorm.config.ts",
        "migration:generate": "yarn typeorm migration:generate",
        "migration:run": "yarn typeorm migration:run",
        "migration:create": "node -r tsconfig-paths/register -r ts-node/register node_modules/.bin/typeorm migration:create",
        "migration:revert": "yarn typeorm migration:revert"
    },
    "dependencies": {
        "@fleekxyz/sdk": "^1.4.2",
        "@nestjs/common": "^10.3.8",
        "@nestjs/config": "^3.2.2",
        "@nestjs/core": "^10.3.8",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/platform-express": "^10.3.8",
        "@nestjs/platform-socket.io": "^10.3.8",
        "@nestjs/typeorm": "^10.0.2",
        "@nestjs/websockets": "^10.3.8",
        "@socket.io/redis-adapter": "^8.3.0",
        "class-validator": "^0.14.1",
        "ethers": "^6.12.1",
        "joi": "^17.13.1",
        "pg": "^8.11.5",
        "redis": "^4.6.14",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "siwe": "^2.3.2",
        "socket.io": "^4.7.5",
        "typeorm": "^0.3.20"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.3.2",
        "@nestjs/schematics": "^10.1.1",
        "@nestjs/testing": "^10.3.8",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.12.12",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.5.0",
        "prettier": "^3.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.3",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
